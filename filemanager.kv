<Button>:
    font_size: 30
    background_normal: ''
    background_color: (0,0,1,1)



MyLayout:

    first_btn: first_btn
    second_btn: second_btn
    thirth_btn: thirth_btn
    mist: mist



    BoxLayout:
        size: root.width, root.height

        orientation:"vertical"
        spacing: 30
        padding: 50

        Label:
            text: 'Trouvez le nombre myst√®re'
            pos_hint: {'center_x' : 0.5, 'center_y' : .5}

        Button:
            id: mist
            text: '?'
            size_hint: (0.2, 2)
            pos_hint: {'x' : 0.4, 'y' : 2}
            width: 90
            height: 150
            background_color: (0,1,1,0)
            # on_press: root.num_mister()



        Button:
            id: first_btn
            text: 'Click to start'
            on_press: root.choice_number()


        Button:
            id: second_btn
            text: 'Click to start'
            background_color: (0,1,0,1)
            on_press: root.choice_number()


        Button:
            id: thirth_btn
            text: 'Click to start'
            background_color: (1,0,1,1)
            on_press: root.choice_number()



        Button:
            id: reset
            text: 'reset'
            background_color: (1,0,0,1)
            on_press: root.reset()


